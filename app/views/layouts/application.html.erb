<!DOCTYPE html>
<html>
<head>
  <title>BETMYBITS</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">


<ul class="nav">
<a class="brand" href="/">BETMYBITS</a>
	<li class="divider-vertical" style=""></li>
	<li><%= link_to "Trading", game_path %></li>
<li><%= link_to "Leaderboard", topboard_path %></li>
<li><%= link_to "News", feed_path %></li>
</ul>
<ul class="nav pull-right">
	<% if user_signed_in? %>

<li>

<li class="divider-vertical"></li>
<li class="dropdown last">
<a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-star icon-white"> </i> <%= current_user.full_name %> <span class="badge badge-important">6</span>
<b class="caret"></b>
</a>
<ul class="dropdown-menu">
<li>
<%= link_to "Edit", edit_user_registration_path %>
</li>
<li>

<%= link_to 'Messages <span class="badge badge-important">6</span>'.html_safe, edit_user_registration_path %> 
</li>
<li>
<a href="/profile/<%=current_user.profile_name%>">Profile</a>

</li>
<li>
<%= link_to "Logout", logout_path %>
</li>
<li>
<li class="divider"></li>
<li>
</ul>
</li>

<% else %>
<a class="btn btn-primary" href="/users/sign_in">Login</a>
<a class="btn" href="/users/sign_up">Create Account</a>
<% end %>
	</ul>
</div>
</div>

<%= yield :index_page %>
<%= yield :topboard_header %>
<div id="page" class="container">
	<% flash.each do |type, message| %>
<div class="alert <%= flash_class type %>">
<button class="close" data-dismiss="alert">x</button>
<%= message %>
	</div>
	<% end %>

	<%= yield %>
</div>
</body>
</html>
